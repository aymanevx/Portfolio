<style>
  .contact-hero {
    text-align: center;
    padding: 3rem 0 2rem;
  }

  h1 {
    font-size: 2.5rem;
    color: #667eea;
    margin-bottom: 1rem;
  }

  .contact-hero p {
    font-size: 1.2rem;
    color: #555;
  }

  .contact-form {
    max-width: 600px;
    margin: 3rem auto;
    background: white;
    padding: 2.5rem;
    border-radius: 12px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  label {
    display: block;
    margin-bottom: 0.5rem;
    color: #333;
    font-weight: 500;
  }

  input, textarea {
    width: 100%;
    padding: 0.8rem;
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    font-size: 1rem;
    font-family: inherit;
    transition: border-color 0.3s;
  }

  input:focus, textarea:focus {
    outline: none;
    border-color: #667eea;
  }

  textarea {
    resize: vertical;
  }

  .btn-submit {
    width: 100%;
    padding: 1rem;
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 1.1rem;
    font-weight: 500;
    cursor: pointer;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .btn-submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
  }

  .contact-info {
    margin-top: 4rem;
  }

  h2 {
    text-align: center;
    font-size: 2rem;
    color: #333;
    margin-bottom: 2rem;
  }

  .info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .info-card {
    background: #f8f9ff;
    padding: 2rem;
    border-radius: 12px;
    text-align: center;
    border: 2px solid #e8ebff;
    transition: transform 0.2s;
  }

  .info-card:hover {
    transform: translateY(-5px);
  }

  .icon {
    font-size: 3rem;
    display: block;
    margin-bottom: 1rem;
  }

  .info-card h3 {
    color: #667eea;
    margin-bottom: 0.5rem;
  }

  .info-card p {
    color: #555;
  }

  .info-card a {
    color: #667eea;
    text-decoration: none;
  }

  .info-card a:hover {
    text-decoration: underline;
  }
</style>