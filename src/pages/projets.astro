---
import BaseLayout from "../layouts/BaseLayout.astro";

// Liste de tes projets (facile à étendre !)
const projets = [
  {
    id: "parkingdqn",
    titre: "ParkingDQN",
    categorie: "Reinforcement Learning",
    description: "Système d'apprentissage par renforcement pour apprendre à une voiture autonome à se garer parfaitement.",
    technologies: ["Python", "PyTorch", "DQN", "Pygame"],
    image: `${import.meta.env.BASE_URL}/images/parking-preview.png`,
    lien: `${import.meta.env.BASE_URL}/projets/parkingdqn`
  },
    {
    id: "newsbot360",
    titre: "NewsBot360",
    categorie: "MCP Agent",
    description: "Un assistant intelligent basé sur une architecture agentique (LLM + MCP) capable de rechercher, synthétiser et analyser le sentiment de l'actualité en temps réel. Orchestration complète entre NewsAPI, outils NLP et base de données.",
    technologies: ["Python", "FastMCP", "LangChain", "Streamlit"],
    image: `${import.meta.env.BASE_URL}/images/newsbot360-preview.png`,
    lien: `${import.meta.env.BASE_URL}/projets/newsbot360`
  },
  {
    id: "congestiongame",
    titre: "RL Congestion Game",
    categorie: "Multi-Agent RL",
    description: "Exploration du Deep Q-Learning (DQN) dans un environnement multi-agents pour résoudre un jeu de congestion sur une grille 6x6. Formation de plusieurs agents à naviguer efficacement vers leur objectif tout en minimisant la congestion sur les chemins partagés, sans coordination explicite.",
    technologies: ["Python", "PyTorch", "Matplotlib", "DQN"],
    image: `${import.meta.env.BASE_URL}/images/congestion-preview.png`,
    lien: `${import.meta.env.BASE_URL}/projets/congestiongame`
  },
    {
    id: "bdd24hmans",
    titre: "Base de données 24 heures du Mans",
    categorie: "Base de Données",
    description: "Modélisation des résultats de la course automobile des 24 Heures du Mans 2024 à travers une base de données relationnelle. Analyse des performances des voitures hypercars, écuries et pilotes via une structure normalisée et optimisée pour les requêtes analytiques.",
    technologies: ["SQL", "SQLite", "Mermaid"],
    image: `${import.meta.env.BASE_URL}/images/lemans-preview.png`,
    lien: `${import.meta.env.BASE_URL}/projets/bdd24hmans`
  },
  

  // Tu pourras ajouter d'autres projets ici facilement :
  // {
  //   id: "projet2",
  //   titre: "Nom du projet 2",
  //   categorie: "Data Science",
  //   description: "Description courte...",
  //   technologies: ["Python", "Pandas"],
  //   image: "/images/projet2.jpg",
  //   lien: "/projets/projet2"
  // },
];
---

<BaseLayout title="Mes Projets">
  <section class="projects-hero">
    <h1>Mes Projets</h1>
    <p class="hero-description">
      Une sélection de mes projets en Data Science, Machine Learning et Intelligence Artificielle
    </p>
  </section>

  <section class="projects-grid">
    {projets.map((projet) => (
      <article class="project-card">
        <div class="project-image">
          <img src={projet.image} alt={projet.titre} />
          <span class="project-category">{projet.categorie}</span>
        </div>
        
        <div class="project-content">
          <h2>{projet.titre}</h2>
          <p class="project-description">{projet.description}</p>
          
          <div class="project-tech">
            {projet.technologies.map((tech) => (
              <span class="tech-badge">{tech}</span>
            ))}
          </div>
          
          <a href={projet.lien} class="project-link">
            Voir le projet 
            <span class="arrow">→</span>
          </a>
        </div>
      </article>
    ))}
  </section>
</BaseLayout>

<style>
  .projects-hero {
    text-align: center;
    padding: 3rem 0 2rem;
  }

  h1 {
    font-size: 2.5rem;
    background: linear-gradient(135deg, #00bfff, #00d4ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
  }

  .hero-description {
    font-size: 1.1rem;
    color: #b0c4de;
    max-width: 700px;
    margin: 0 auto;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2.5rem;
    margin-top: 3rem;
  }

  .project-card {
    background: #243447;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    transition: all 0.3s ease;
    border: 1px solid rgba(0, 191, 255, 0.1);
  }

  .project-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 35px rgba(0, 191, 255, 0.15);
    background: #2a3e52;
  }

  .project-image {
    position: relative;
    width: 100%;
    height: 220px;
    background: linear-gradient(135deg, #0d1b2a, #1a3a52);
    overflow: hidden;
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.9;
  }

  .project-category {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: rgba(13, 27, 42, 0.95);
    color: #00bfff;
    padding: 0.4rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
    border: 1px solid #00bfff;
  }

  .project-content {
    padding: 2rem;
  }

  .project-card h2 {
    font-size: 1.5rem;
    color: #e8e8e8;
    margin-bottom: 1rem;
  }

  .project-description {
    color: #b0c4de;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .tech-badge {
    background: rgba(0, 191, 255, 0.1);
    color: #00bfff;
    padding: 0.4rem 0.9rem;
    border-radius: 15px;
    font-size: 0.85rem;
    font-weight: 500;
    border: 1px solid rgba(0, 191, 255, 0.3);
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #00bfff;
    font-weight: 600;
    text-decoration: none;
    transition: gap 0.3s ease;
  }

  .project-link:hover {
    gap: 1rem;
  }

  .arrow {
    transition: transform 0.3s ease;
  }

  .project-link:hover .arrow {
    transform: translateX(5px);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>