    gap: 2rem;
    margin-top: 2rem;
  }

  .result-card {
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    padding: 2rem;
    border-radius: 16px;
    text-align: center;
  }

  .result-card h3 {
    font-size: 2.5rem;
    margin: 0 0 0.5rem 0;
    color: white;
  }

  .result-card p {
    margin: 0;
    opacity: 0.95;
    color: white;
  }

