---
// BaseLayout.astro
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
</head>
<body>
  <header>
    <nav>
      <a href={import.meta.env.BASE_URL} class="logo">AA</a>
      <div class="nav-links">
        <a href={import.meta.env.BASE_URL}>Accueil</a>
        <a href={`${import.meta.env.BASE_URL}/projets`}>Projets</a>
        <a href={`${import.meta.env.BASE_URL}/contact`}>Contact</a>
      </div>
    </nav>
  </header>

  <main>
    <slot />
  </main>

  <footer>
    <p>&copy; 2026 Aymane Aibichi. Tous droits réservés.</p>
  </footer>
</body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Segoe UI', system-ui, sans-serif;
    line-height: 1.6;
    color: #e8e8e8;
    background: linear-gradient(135deg, #0d1b2a 0%, #1a3a52 100%);
    min-height: 100vh;
  }

  header {
    background: rgba(13, 27, 42, 0.95);
    backdrop-filter: blur(10px);
    padding: 1rem 2rem;
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.5);
    position: sticky;
    top: 0;
    z-index: 100;
    border-bottom: 2px solid #00bfff;
  }

  nav {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-size: 1.5rem;
    font-weight: bold;
    color: #00bfff;
    text-decoration: none;
    transition: color 0.3s;
  }

  .logo:hover {
    color: #00d4ff;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-links a {
    color: #b0c4de;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s;
  }

  .nav-links a:hover {
    color: #00bfff;
  }

  main {
    max-width: 1200px;
    margin: 2rem auto;
    padding: 2rem;
    background: #1a2332;
    border-radius: 16px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
    border-left: 4px solid #00bfff;
  }

  footer {
    background: rgba(13, 27, 42, 0.95);
    backdrop-filter: blur(10px);
    padding: 2rem;
    text-align: center;
    color: #b0c4de;
    margin-top: 4rem;
    border-top: 2px solid #00bfff;
  }

  /* Responsive pour mobile */
  @media (max-width: 768px) {
    header {
      padding: 0.8rem 1rem;
      position: relative; /* Désactive sticky sur mobile */
    }

    nav {
      flex-direction: column;
      gap: 0.8rem;
      align-items: center;
    }

    .nav-links {
      gap: 1rem;
      flex-wrap: wrap;
      justify-content: center;
    }

    .nav-links a {
      font-size: 0.9rem;
    }

    main {
      margin: 1rem auto;
      padding: 1.5rem;
    }
  }
</style>